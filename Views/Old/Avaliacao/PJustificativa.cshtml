                        <b>Parecer:</b><p>
                            @item.Comentario
                        </p>
                        if (Model.lTrabalhoInteracao.Last() != item)
                        {
                            <hr style="margin:5px 0px 10px 0px;" />
                        }
                    }

                }

                @if (Model.CodSituacaoTrabalho == 4) /* Ressalva */
                {
                    <div><p> @Html.DisplayFor(x => x.Comentario)</p></div>
                }*@

            <div><p> @Html.Raw(Model.Comentario)</p></div>

        </div>
    </div>
</div>
<div class="modal-footer">
    @if (Model.CodSituacaoInteracao == 5) /* Ressalva para comissão*/
        {
            <a class="btn btn-success" href="@Url.Action("Edit","Trabalho", new { Model.CodTrabalho })">
                Corrigir Trabalho
            </a>
        }
    <button data-dismiss="modal" type="button" class="btn btn-primary">Ok, Entendi!</button>
</div>
