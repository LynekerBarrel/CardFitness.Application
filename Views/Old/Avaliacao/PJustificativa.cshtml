@model AdmSimposio.Models.TrabalhoInteracaoModelo

<div style="color: white; background-color: #004077; font-weight:bold; border-top-left-radius:inherit; border-top-right-radius:inherit" class="modal-header">
    <button type="button" class="close text" style="color:white !important; opacity:1" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
    @if (Model.CodSituacaoInteracao == 3) /* Rejeição */
    {
        <h4 class="modal-title" id="exampleModalLabel">Justificativa do avaliador - Trabalho</h4>
    }
    @if (Model.CodSituacaoInteracao == 4 || Model.CodSituacaoInteracao == 5) /* Ressalva */
    {
        <h4 class="modal-title" id="exampleModalLabel">Ressalva do avaliador - Trabalho</h4>
    }
  
</div>

<div class="modal-body" style="font-family: Calibri; height:100%;display:block; overflow-y:scroll;width:100%;">
    <div class="panel panel-default">
        <div class="panel-heading">
            @if (Model.CodSituacaoInteracao == 3) /* Rejeição */
            {
                <b>Segue abaixo a justificativa do avaliador.</b>
            }
            @if (Model.CodSituacaoInteracao == 4 || Model.CodSituacaoInteracao == 5) /* Ressalva */
            {
                <b>Segue abaixo a ressalva do avaliador.</b>
            }
            @if (Model.CodSituacaoInteracao == 8) /* Ressalva */
            {
                <b>Segue abaixo a justificativa do cancelamento.</b>
            }
        </div>
        <div class="panel-body">
            @*@if (Model.CodSituacaoTrabalho == 3) /* Rejeição */
                {
                    @foreach (var item in Model.lTrabalhoInteracao)
                    {
                        <b>Data: </b>
