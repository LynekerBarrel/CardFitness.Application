
@{
    ViewData["Title"] = "Inicio";
}

<div>
    <div id="loading">
        <div class="spinner">
            <div class="rect1"></div>
            <div class="rect2"></div>
            <div class="rect3"></div>
            <div class="rect4"></div>
            <div class="rect5"></div>
        </div>
    </div>

    <div id="PartialIndex"></div>
</div>
<script type="text/javascript" charset="utf-8">
    window.onload = function () {
            $.get('@Url.Content("~/Home/MenuPrincipal")', function (content) {
            $("#Menu").html(content);
        });
        CallForm();
    }
    function CallForm() {
        $('#loading').show();
        var url = '@Url.Action("LoadIndex", "Home")';
        $.ajax({
            url: url,
            type: 'GET',
            //data: $('#Propositura').serialize(),
            success: function (result) {
                $('#loading').hide();
                $('#PartialIndex').empty();
                $('#PartialIndex').html(result);
            },
            error: function (xhr, status) {
                alert(status);
            }
        });
    }
</script>
