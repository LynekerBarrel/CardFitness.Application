<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Adm Simpósio - @ViewData["Title"]</title>

    <style>
        body {
            font-family: "Roboto", helvetica, arial, sans-serif;
            font-size: 14px;
            font-weight: 400;
        }

      
        .alinharPaginaProtrait {
            margin-left: 16px;
            float: left;
        }
        .alinharPaginaLandscape {
            margin-left: 23px;
            float: left;
        }
        .topTable {
            float: left;
            width: 100%;
        }

        div.table-title {
            display: block;
            margin: auto;
            max-width: 600px;
            padding: 5px;
            width: 100%;
        }

        .table-title h3 {
            color: #fafafa;
            font-size: 16px;
            font-weight: 400;
            font-style: normal;
            font-family: "Roboto", helvetica, arial, sans-serif;
            text-shadow: -1px -1px 1px rgba(0, 0, 0, 0.1);
            text-transform: uppercase;
        }

        .header-center {
            float: left;
            width: 96%;
            text-align: center;
            color: #00254a;
            margin-bottom: 10px;
        }

        /*** Table Styles **/

        .table-fill {
            background: white;
            border-radius: 3px;
            border-collapse: collapse;
            height: 320px;
            margin: auto;
            max-width: 96%;
            padding: 5px;
            width: 100%;
            box-shadow: 0 1px 20px rgba(0, 0, 0, 0.1);
        }

        .table-fillPortrait {
            background: white;
            border-radius: 3px;
            border-collapse: collapse;
            height: 730px;
            margin: auto;
            max-width: 96%;
            padding: 5px;
            width: 100%;
            box-shadow: 0 1px 20px rgba(0, 0, 0, 0.1);
        }

        th {
            color: #00254a;
            background: #fff;
            border-bottom: 4px solid #9ea7af;
            border-right: 1px solid #9ea7af;
            font-size: 14px;
            font-weight: bold;
            padding: 10px;
            text-align: left;
            vertical-align: middle;
        }

            th:first-child {
                border-top-left-radius: 3px;
            }

            th:last-child {
                border-top-right-radius: 3px;
                border-right: none;
            }

        tr {
            border-top: 1px solid #C1C3D1;
            color: #5e6279;
            font-size: 16px;
            font-weight: normal;
        }

            tr:hover td {
                background: #4E5066;
                color: #FFFFFF;
                border-top: 1px solid #22262e;
            }

            tr:first-child {
                border-top: none;
            }



            tr:nth-child(odd) td {
                background: #fff;
            }

            tr:nth-child(odd):hover td {
                background: #4E5066;
            }

            tr:last-child td:first-child {
                border-bottom-left-radius: 3px;
            }

            tr:last-child td:last-child {
                border-bottom-right-radius: 3px;
            }

        td {
            background: #FFFFFF;
            padding: 0px 5px 0px 5px;
            text-align: left;
            vertical-align: middle;
            font-weight: 300;
            font-size: 12px;
            border-right: 1px solid #C1C3D1;
        }

            td:last-child {
                border-right: 0px;
            }

        th.text-left {
            text-align: left;
        }

        th.text-center {
            text-align: center;
        }

        th.text-right {
            text-align: right;
        }

        td.text-left {
            text-align: left;
        }

        td.text-center {
            text-align: center;
        }

        td.text-right {
            text-align: right;
        }
    </style>

</head>
<body>
    @RenderBody()
</body>
</html>