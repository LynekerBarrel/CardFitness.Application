@model List<CardFitness.Models.Ficha>
@{
    ViewBag.Title = "Ficha";
}

<div style="margin-top: 20px">
    <div class="pull-left">
        <div>
            <h4 style="display:inline; font-size: 24px; font-weight:bold ">
                Controlar Fichas
            </h4>
        </div>
    </div>
    <div class="pull-right">
        <a asp-action="CadastrarFicha" class="btn btn-primary">Cadastrar</a>
    </div>
</div>


<table class="table table-hover pull-left" style="margin-top:20px;">

    <tr>
        <td></td>
        <td>
            @Html.Label("Dia Sequencial")
        </td>
        <td>
            @Html.Label("Descricao")
        </td>
        <td>
            @Html.Label("Situação")
        </td>
        <td class="text-right"> @Html.Label("Opções")</td>
    </tr>
    @if (Model != null && Model.Count > 0)
    {
        foreach (var item in Model)
        {
<tr>
    <td>
        <a href="@Url.Action("FichaExercicio", "Ficha", new { IDFicha = item.IDFicha })" title="Vinculo dos Exercícios" class="btn btn-primary">
            <i class="fa fa-search"></i>
        </a>

    </td>
    <td>
        <span>@item.DiaSeq.ToString()</span>
    </td>
    <td>
        <span>@item.Descricao</span>
    </td>
    <td>
        @if (item.Status.ToString() == "1")
        {
            <span>Ativo</span>
        }
        else
        {
            <span>Inativo</span>
        }
    </td>
    <td class="text-right">
        <a href="@Url.Action("EditarFicha", "Ficha", new { IDFicha = item.IDFicha })" class="btn btn-info">
            <i class="fa fa-edit"></i>
        </a>

        @if (item.Status.ToString() == "1")
        {
            <a href="@Url.Action("AlterarSituacao", "Ficha", new { IDFicha = item.IDFicha })" class="btn btn-danger">
                <i class="fa fa-times"></i>
            </a>
        }
        else
        {
            <a href="@Url.Action("AlterarSituacao", "Ficha", new { IDFicha = item.IDFicha })" class="btn btn-success">
                <i class="fa fa-check"></i>
            </a>
        }
    </td>
</tr>
        }
    }
</table>
