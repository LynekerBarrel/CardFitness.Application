@model CardFitness.Models.Exercicio
@{
    ViewBag.Title = "Cadastrar tipos de exercícios";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    {@Html.ValidationSummary(true)
    <fieldset>
        <div style="margin-top: 20px; font-size: 24px; font-weight:bold ">
            Cadastre um exercício
        </div>
        <table style="margin-top:20px">
            <tr>
                <td colspan="2">
                    <div class="editor-field form-group" style="margin-left: 5px">
                        @Html.DropDownListFor(x => x.IDTipo, new SelectList(Model.Tipos, "IDTipo", "Descricao"), "Selecione...", new { @class = "form-control" })
                    </div>
                </td>
            </tr>

            <tr>
                <td>
                    <div class="editor-label">
                        @Html.LabelFor(model => model.Descricao):
                    </div>
                </td>
                <td>

                    <div class="editor-field" style="margin-left: 5px">
                        @Html.EditorFor(model => model.Descricao, new { htmlAttributes = new { @class = "form-control validar" } })
                        @Html.ValidationMessageFor(model => model.Descricao)
                    </div>
                </td>
            </tr>
            <tr>
                <td></td>
                <td>
                    <div style="margin-top: 10px">
                        <input type="submit" value="Cadastrar" class="btn btn-primary btnSubmit" style="float:right" />
                    </div>
                </td>
            </tr>
        </table>

    </fieldset>
}
}

